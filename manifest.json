{
  "manifest_version": 2,
  "name": "Xero Budget Manager",
  "version": "1.0",
  "description": "Manage budgets and select months in Xero Budget Manager.",
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Xero Budget Manager"
  },
  "content_scripts": [
    {
      "matches": ["*://*.xero.com/*"],
      "js": ["content.js"]
    }
  ]
}